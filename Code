import tkinter as tk
import random

def count_holes(board):
    def dfs(board, i, j):
        if i < 0 or i >= len(board) or j < 0 or j >= len(board[0]) or board[i][j] == 'B':
            return 0
        board[i][j] = 'B'
        count = 1
        count += dfs(board, i-1, j)
        count += dfs(board, i+1, j)
        count += dfs(board, i, j-1)
        count += dfs(board, i, j+1)
        return count

    holes = []
    for i in range(len(board)):
        for j in range(len(board[0])):
            if board[i][j] == 'W':
                count = dfs(board, i, j)
                holes.append(count)
    return holes

def create_random_board(n_rows, n_cols):
    board = []
    for i in range(n_rows):
        row = []
        for j in range(n_cols):
            if random.random() < 0.5:
                row.append("W")
            else:
                row.append("B")
        board.append(row)
    return board
def visualize_board(board):
    # create window
    window = tk.Tk()
    window.geometry("500x500")
    window.title("Hole Counter")

    # create board grid
    for i in range(len(board)):
        for j in range(len(board[0])):
            color = "white" if board[i][j] == "W" else "black"
            cell = tk.Label(window, text=board[i][j], width=2, height=1, bg=color, relief="solid", bd=1)
            cell.grid(row=i, column=j)

    # count holes and display results
    holes = count_holes(board)
    holes_label_text = ""
    for i, hole_size in enumerate(holes):
        holes_label_text += f"Hole {i+1}: {hole_size}\n"
    holes_label = tk.Label(window, text=f"Number of holes: {len(holes)}\n\n{holes_label_text}")
    holes_label.grid(row=len(board), columnspan=len(board[0]))

    # run mainloop
    window.mainloop()

def on_submit():
    # get user input for number of rows and columns
    n_rows = int(rows_entry.get())
    n_cols = int(cols_entry.get())

    # create random board
    board = create_random_board(n_rows, n_cols)

    # display board
    visualize_board(board)

# create window
root = tk.Tk()
root.title("Hole Counter")
root.geometry("500x500")
# create input form
rows_label = tk.Label(root, text="Number of rows:")
rows_label.place(x=100,y=100)
rows_entry = tk.Entry(root)
rows_entry.place(x=200,y=100)

cols_label = tk.Label(root, text="Number of columns:")
cols_label.place(x=100,y=200)
cols_entry = tk.Entry(root)
cols_entry.place(x=220,y=200)

submit_button = tk.Button(root, text="Create Board", command=on_submit)
submit_button.place(x=300,y=300)

# run mainloop
root.mainloop()
